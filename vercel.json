{
  "buildCommand": "composer install --optimize-autoloader --no-dev && npm install && npm run build",
  "outputDirectory": "public",
  "env": {
    "APP_NAME": "Diamond Academy",
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "LOG_CHANNEL": "stack"
  },
  "routes": [
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.php"
    }
  ]
}
